# Django
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (defaults to SQLite, uncomment and modify for PostgreSQL/MySQL)
# DATABASE_URL=sqlite:///./db.sqlite3  # SQLite (default)
# DATABASE_URL=postgres://django:django@localhost:5432/django_saas  # PostgreSQL
# DATABASE_URL=mysql://django:django@localhost:3306/django_saas     # MySQL

# Redis Cache & Celery
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Email
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=localhost
EMAIL_PORT=1025
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=False
EMAIL_USE_SSL=False
DEFAULT_FROM_EMAIL=Django SaaS <noreply@example.com>

# CORS
CORS_ALLOW_ALL_ORIGINS=True
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Optional: RabbitMQ (set to true to use instead of Redis)
RABBITMQ_ENABLED=false
RABBITMQ_URL=amqp://guest:guest@localhost:5672//

# Optional: Sentry
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1

# Optional: OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=

# Optional: S3/MinIO for file storage
USE_S3=false
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=

# Production Security (set in production)
SECURE_SSL_REDIRECT=false
SECURE_HSTS_SECONDS=0
ADMIN_URL_PATH=admin/
ADMIN_IP_ALLOWLIST=

# Development
CELERY_TASK_ALWAYS_EAGER=false
USE_DUMMY_CACHE=false
DEMO_MODE=false
