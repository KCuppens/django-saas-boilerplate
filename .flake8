[flake8]
exclude = 
    .git,
    __pycache__,
    docs/source/conf.py,
    old,
    build,
    dist,
    venv,
    .venv,
    */venv/*,
    */.venv/*,
    .mypy_cache,
    .pytest_cache,
    */migrations/*,
    node_modules,
    .tox,
    .eggs,
    *.egg
max-line-length = 88
extend-ignore = E203, W503
# E203: whitespace before ':' (conflicts with black)
# W503: line break before binary operator (conflicts with black)
per-file-ignores =
    __init__.py:F401
    */settings/*.py:F401,F403,F405
    */tests/*:F401,F403,F811